generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String  @id @default(uuid())
  name      String
  imageUrl  String
  isVisible Boolean @default(true)
  status    String
  links     Link[]
}

model Link {
  id        String  @id @default(uuid())
  github    String?
  linkedin  String?
  deploy    String?
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
}

model Components {
  id               String  @id @default(uuid())
  name             String
  imageUrl         String
  codeDependencies String?
  codeMain         String?
  codeImport       String
  code             String
  description      String?
}

model Design {
  id       String  @id @default(uuid())
  name     String
  imageUrl String
  link     String?
}
